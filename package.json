    "@commitlint/config-conventional": "7.5.0",
    "husky": "1.3.1",
    "lerna": "3.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn fix",
      "pre-push": "yarn test"
    }
  }
